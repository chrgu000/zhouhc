-- CREEATE TABLE SPD_PURCHASE
create table SPD_PURCHASE
(
  PURCHASE_ID      VARCHAR2(50) not null,
  PURCHASE_CODE    VARCHAR2(50),
  PURCHASE_TYPE    VARCHAR2(50),
  DEPT_ID          VARCHAR2(50),
  DEPOT_ID         VARCHAR2(50),
  PLAN_AMOUNT      NUMBER(10,2),
  CONFIRM_AMOUNT   NUMBER(10,2),
  SUPPLIER         VARCHAR2(50),
  YARD_ID          INTEGER,
  CHECK_STATE      INTEGER,
  CREATE_TIME      DATE,
  LAST_UPDATE_TIME DATE,
  DESCRIBE         VARCHAR2(500)
);
comment on column SPD_PURCHASE.PURCHASE_TYPE
  is '1：采购 2：退货';
alter table SPD_PURCHASE
  add constraint PK_SPD_PURCHASE primary key (PURCHASE_ID);